doctype html
html(lang="ja")
  head
    title Lattendance
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet")
    link(rel="stylesheet",
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css",
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk",
    crossorigin="anonymous")
  body
    nav.navbar.navbar-expand-lg.fixed-top.navbar-light.bg-light
      a(href="/").navbar-brand.nav-link Lattendance
      div#navbarNav.collapse.navbar-collapse.justify-content-end
        ul.navbar-nav
          if user
            li.nav-item.dropdown
              a(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")#navbarDropdown.nav-link.dropdown-toggle #{user.username}
              div(aria-labelledby="navbarDropdown").dropdown-menu.dropdown-menu-right
                a(href="/logout").dropdown-item ログアウト
          else if !login_page
            li.nav-item
              a(href="/login").nav-link ログイン
    div.container
      block content
    script(src="/javascripts/bundle.js")
